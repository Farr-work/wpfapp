<Window x:Class="StudentManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý sinh viên"
        Height="500" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">
    <Window.Resources>
        <!-- Màu chủ đạo -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2563EB"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#1D4ED8"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>
        <SolidColorBrush x:Key="BorderBrushColor" Color="#E5E7EB"/>

        <!-- Style cho Button -->
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#9CA3AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Thanh tiêu đề -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}"
                CornerRadius="8" Padding="16" Margin="0 0 0 12">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Quản lý sinh viên"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0 0 12 0"/>
                <TextBlock Text="• WPF + SQLite"
                           Foreground="#BFDBFE"
                           VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>

        <!-- Nội dung chính -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Khu nhập thông tin -->
            <Border Grid.Row="0"
                    Background="{StaticResource CardBackground}"
                    CornerRadius="8"
                    BorderBrush="{StaticResource BorderBrushColor}"
                    BorderThickness="1"
                    Padding="12"
                    Margin="0 0 0 12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Dòng 1 -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0 0 8 8">
                        <TextBlock Text="Mã sinh viên" FontWeight="Bold" Margin="0 0 0 4"/>
                        <TextBox x:Name="txtMaSV" Padding="6"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0 0 8 8">
                        <TextBlock Text="Họ tên" FontWeight="Bold" Margin="0 0 0 4"/>
                        <TextBox x:Name="txtHoTen" Padding="6"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0 0 8 8">
                        <TextBlock Text="Lớp" FontWeight="Bold" Margin="0 0 0 4"/>
                        <TextBox x:Name="txtLop" Padding="6"/>
                    </StackPanel>

                    <!-- Dòng 2 -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0 0 8 0">
                        <TextBlock Text="Ngày sinh" FontWeight="Bold" Margin="0 0 0 4"/>
                        <DatePicker x:Name="dpNgaySinh" />
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0 0 8 0">
                        <TextBlock Text="Giới tính" FontWeight="Bold" Margin="0 0 0 4"/>
                        <ComboBox x:Name="cbGioiTinh" Padding="4">
                            <ComboBoxItem Content="NAM"/>
                            <ComboBoxItem Content="NỮ"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Nút -->
                    <StackPanel Grid.Row="0" Grid.Column="3" Grid.RowSpan="2"
                                Orientation="Vertical"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <Button Content="Thêm mới" Width="100" Click="BtnThem_Click"/>
                        <Button Content="Sửa" Width="100" Click="BtnSua_Click"/>
                        <Button Content="Xóa" Width="100" Click="BtnXoa_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Khu danh sách + tìm kiếm -->
            <Border Grid.Row="1"
                    Background="{StaticResource CardBackground}"
                    CornerRadius="8"
                    BorderBrush="{StaticResource BorderBrushColor}"
                    BorderThickness="1"
                    Padding="12">
                <DockPanel>
                    <!-- Thanh tìm kiếm -->
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 8">
                        <TextBlock Text="Tìm kiếm:" VerticalAlignment="Center" Margin="0 0 8 0"/>
                        <TextBox x:Name="txtSearch" Width="220" Padding="6" Margin="0 0 8 0"/>
                        <Button Content="Lọc" Width="70" Click="BtnLoc_Click"/>
                        <Button Content="Reset" Width="70" Click="BtnReset_Click"/>
                    </StackPanel>

                    <!-- Bảng -->
                    <DataGrid x:Name="dgStudents"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              SelectionChanged="dgStudents_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mã SV" Binding="{Binding Id}" Width="*"/>
                            <DataGridTextColumn Header="Họ tên" Binding="{Binding Name}" Width="2*"/>
                            <DataGridTextColumn Header="Lớp" Binding="{Binding ClassName}" Width="*"/>
                            <DataGridTextColumn Header="Giới tính" Binding="{Binding Gender}" Width="*"/>
                            <DataGridTextColumn Header="Ngày sinh"
                                                 Binding="{Binding BirthDate, StringFormat={}{0:dd/MM/yyyy}}"
                                                 Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
