<Window x:Class="StudentManager.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng ký tài khoản"
        Height="380" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F3F4F6">
    <Grid Margin="16">
        <Border Background="White" CornerRadius="8" Padding="20"
                BorderBrush="#E5E7EB" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Đăng ký" FontSize="20"
                           FontWeight="Bold" Margin="0 0 0 12"/>

                <TextBlock Text="Tên đăng nhập" Margin="0 0 0 4"/>
                <TextBox x:Name="txtUsername" Padding="6" Margin="0 0 0 10"/>

                <TextBlock Text="Mật khẩu" Margin="0 0 0 4"/>
                <PasswordBox x:Name="pbPassword" Padding="6" Margin="0 0 0 10"/>

                <TextBlock Text="Nhập lại mật khẩu" Margin="0 0 0 4"/>
                <PasswordBox x:Name="pbConfirm" Padding="6" Margin="0 0 0 16"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Đăng ký" Width="100"
                            Click="BtnRegister_Click"/>
                    <Button Content="Hủy" Width="93" Margin="10 0 0 0"
                            Click="BtnCancel_Click"/>
                </StackPanel>

                <TextBlock x:Name="txtMessage"
                           Foreground="Red"
                           Margin="0 8 0 0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
