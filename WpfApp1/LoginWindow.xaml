<Window x:Class="StudentManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập"
        Height="350" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F3F4F6">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2563EB"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#1D4ED8"/>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Border Background="White" CornerRadius="8" Padding="20"
                BorderBrush="#E5E7EB" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Đăng nhập" FontSize="20"
                           FontWeight="Bold" Margin="0 0 0 12"
                           Foreground="#111827"/>

                <TextBlock Text="Tên đăng nhập" Margin="0 0 0 4"/>
                <TextBox x:Name="txtUsername" Padding="6" Margin="0 0 0 10"/>

                <TextBlock Text="Mật khẩu" Margin="0 0 0 4"/>
                <PasswordBox x:Name="pbPassword" Padding="6" Margin="0 0 0 16"/>

                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button Content="Đăng nhập" Width="110"
                            Click="BtnLogin_Click"/>
                    <Button Content="Đăng ký" Width="110"
                            Background="#6B7280"
                            Click="BtnRegister_Click"/>
                </StackPanel>

                <TextBlock x:Name="txtMessage"
                           Foreground="Red"
                           Margin="0 8 0 0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
